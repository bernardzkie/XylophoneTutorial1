<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".easy_format_songs">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        >
        <ImageButton

            android:id="@+id/strt_record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/start_rec" />



        <ImageButton
            android:id="@+id/ply_record"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/play_rec" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/bilog"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/notepatern"
            android:text="A"
            android:textSize="70dp"
            android:fontFamily="serif-monospace"


            />

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tittle"
            android:textSize="15dp"
            android:fontFamily="serif-monospace"
            android:text="tittle"/>
        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/played_notes"
            android:textSize="15dp"
            android:fontFamily="serif-monospace"

            />




    </LinearLayout>
</LinearLayout>